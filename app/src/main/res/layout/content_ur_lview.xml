<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_ur_lview" tools:context="com.example.team3.whisk.URLView"
    android:background="@drawable/wbg">

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="10dp"
        android:id="@+id/nutrition_button"
        android:background="@drawable/nutrition_button"
        android:layout_alignRight="@+id/webview"
        android:layout_alignEnd="@+id/webview"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/recipe_button"
        android:onClick="onNutritionClick"/>

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="10dp"
        android:id="@+id/recipe_button"
        android:background="@drawable/recipe_button_pressed"
        android:layout_alignTop="@+id/shop_button"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/shop_button" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="10dp"
        android:id="@+id/shop_button"
        android:background="@drawable/shop_button"
        android:layout_alignLeft="@+id/webview"
        android:layout_alignStart="@+id/webview"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/webview" />

</RelativeLayout>
